<div class="col-sm-6 col-sm-offset-3 text">
    <div class="form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>Créer une catégorie</h3>
            </div>
            <div class="form-top-right">
                <i class="fa fa-pencil"></i>
            </div>
        </div>
        <div class="form-bottom">
            <form role="form" action="/admin/adminCategoryCreate" method="post" class="registration-form">
                <div class="form-group">
                    <label class="sr-only" for="form-first-name">Nom de la catégorie</label>
                    <input type="text" name="title" placeholder="Nom de la catégorie" class="form-first-name form-control" id="form-first-title">
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>
        </div>
    </div>
</div>