<div class="row">
    
    <h2>Produits</h2>
    

    <div class="pull-right">

    <a href="/admin/adminProductCreate" class="btn btn-default btn-success btn-md" data-toggle="modal" ><i class="glyphicon glyphicon-plus"></i> Ajouter</a>
        
    </div>    

</div>    
    
    
    <div class="row">
        
        <table class="table table-bordered table-striped">
            <thead >
                <tr class="bg-info ">
                    <th></th>
                    <th>Nom</th>
                </tr>
            </thead>
            
            <tbody id="list-itens">
            <% products.forEach(function(product){ %>                
                <tr>
                    <td style="width:140px; text-align: center">
                        <a href="/admin/adminProductEdit/<%=product.id%>" class="btn btn-sm btn-default" ><i class="icon-trash glyphicon glyphicon-edit text-primary"></i></a>
                        <form action="/admin/adminProductDelete/<%=product.id%>" method="POST">
                            <button class="btn btn-sm btn-default"><i class="icon-trash glyphicon glyphicon-trash text-danger"></i></button>
                        </form>
                    </td>
                    
                    <td><%= product.title %></td>
                </tr>
            <% }); %>
            </tbody>    
            
        </table>
        
        
        
    </div>