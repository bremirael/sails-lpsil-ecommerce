<div class="col-sm-6 col-sm-offset-3 text">
    <div class="form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>Modification Utilisateur</h3>
            </div>
            <div class="form-top-right">
                <button href="/admin" type="submit" class="btn btn-danger">Annuler</button>
            </div>
        </div>
        <div class="form-bottom">
            <% users.forEach(function(user){ %>
            <form role="form" action="/admin/adminUserUpdate" method="post" class="registration-form">
                <div class="form-group">
                    <label class="sr-only" for="form-first-name">Identifiant</label>
                    <input type="text" name="username" placeholder="<%= user.username %>" value="" class="form-first-name form-control" id="form-first-name" required>
                </div>
                <div class="form-group">
                    <label class="sr-only" for="form-last-name">Mot de passe</label>
                    <input type="password" name="password" placeholder="<%= user.password %>" value="" class="form-last-name form-control" id="form-last-name" required>
                </div>
                <div class="form-group">
                    <label class="sr-only" for="form-email">Email</label>
                    <input type="email" name="email" placeholder="<%= user.email %>" value="" class="form-email form-control" id="form-email" required>
                </div>
                <input type="hidden" name="id" value="<%= user.id %>">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>
            <% }); %>    
        </div>
    </div>
</div>
